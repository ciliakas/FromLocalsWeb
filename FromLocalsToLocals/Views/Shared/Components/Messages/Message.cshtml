@model FromLocalsToLocals.Web.ViewComponents.Messages.MessagesVM

@foreach (var m in Model.Messages)
{
    if (!(Model.IsUserTab ^ m.IsUserSender))
    {
        <div class="outgoing_msg">
            <div class="sent_msg">
                <p>
                    @m.Text
                </p>
                <span class="time_date">@m.Date</span>
            </div>
        </div>
    }
    else
    {
        <div class="incoming_msg">
            <div class="incoming_msg_img">
                @if (Model.Image != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(Model.Image)" alt="avatar" class="img-circle"/>
                }
                else
                {
                    if (Model.IsUserTab)
                    {
                        <img class="img-circle" src="~/Assets/localSeller.png" alt="avatar"/>
                    }
                    else
                    {
                        <img class="img-circle" src="~/Assets/profile.png" alt="avatar"/>
                    }
                }
            </div>
            <div class="received_msg">
                <div class="received_withd_msg">
                    <p>
                        @m.Text
                    </p>
                    <span class="time_date">@m.Date</span>
                </div>
            </div>
        </div>
    }
}