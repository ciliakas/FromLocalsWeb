@model FromLocalsToLocals.Web.ViewModels.CreatePostVM


<div class="container">
    <div id="content" class="content content-full-width">
        <div class="profile-content">
            <div class="tab-content p-0">
                <div class="tab-pane fade active show" id="profile-post">
                    <ul class="timeline">
                        <li>
                            <form asp-action="CreatePost" asp-controller="Feed" enctype="multipart/form-data">

                                <div class="timeline-body">

                                    <div class="timeline-header">
                                        @if (!Model.DisplayInDetails)
                                        {
                                            <select asp-for="@Model.VendorTitle">
                                                @foreach (var x in Model.User.Vendors)
                                                {
                                                    <option>@x.Title</option>
                                                }
                                            </select>
                                        }
                                        else
                                        {
                                            <input type="hidden" asp-for="@Model.VendorTitle" value="@Model.VendorTitle"/>
                                        }
                                        <input type="hidden" asp-for="@Model.PostBackUrl" value="@Html.ViewContext.HttpContext.Request.Path.Value"/>

                                    </div>
                                    <div class="timeline-content">
                                        <textarea asp-for="@Model.Text" style="width: 100%" placeholder="What's new?"></textarea>
                                    </div>
                                    <div class="timeline-footer">
                                        <div class="=row">
                                            <label class="btn btn-primary" style="margin: 0px;">
                                                <i class="fa fa-image"></i>
                                                <span id="selectPhotoBtnText">Add Photo</span>
                                                <input onchange="imageUpload(this)" id="imageInput" type="file" style="display: none;" name="image" asp-for="Image">
                                            </label>
                                            <input type="submit" class="btn btn-success" value="POST">
                                        </div>
                                        <div id="selectedPhotoName"></div>
                                    </div>
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>