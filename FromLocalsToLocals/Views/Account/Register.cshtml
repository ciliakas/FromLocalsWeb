@inject IViewLocalizer _localizer
@using Microsoft.AspNetCore.Mvc.Localization
@model FromLocalsToLocals.Web.ViewModels.RegisterVM

@{
    ViewBag.Title = _localizer["User Registration"];
}

<head>
    <link href="~/css/revealEyeLogin.css" rel="stylesheet" type="text/css">
</head>

<div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-c-tabs">
                <ul class="nav nav-tabs md-tabs tabs-2 light-blue darken-3" role="tablist">
                    <li class="nav-item">
                        <a href="@Url.Action("Login", "Account")" class="nav-link" role="tab">
                            <i class="fa fa-user-o" style="width: 20px;" aria-hidden="true"></i>
                            @_localizer["Login"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#registerPanel" role="tab">
                            <i class="fa fa-user-plus"></i>
                            @_localizer["Register"]
                        </a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade in show active" id="registerPanel" role="tabpanel">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                        {
                            <div class="modal-body">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group mt-3 mb-3">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">
                                                <span class="fa fa-envelope" style="width: 20px;"></span>
                                            </span>
                                        </div>
                                        <input asp-for="Email" class="form-control" placeholder=@_localizer["Email"] aria-label="Email" aria-describedby="basic-addon1"/>

                                    </div>
                                </div>

                                <div class="form-group mt-3 mb-3">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon2">
                                                <span class="fa fa-user" style="width: 20px;"></span>
                                            </span>
                                        </div>
                                        <input asp-for="Username" class="form-control" placeholder=@_localizer["Username"] aria-label="Username" aria-describedby="basic-addon2"/>

                                    </div>
                                </div>

                                <div class="form-group, wrapper mt-3 mb-3">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon3">
                                                <span class="fa fa-lock" style="width: 20px;"></span>
                                            </span>
                                        </div>
                                        <input asp-for="Password" class="form-control" placeholder=@_localizer["Password"] aria-label="Password" aria-describedby="basic-addon3"/>

                                    </div>
                                </div>

                                <div class="form-group, wrapper mt-3 mb-4">
                                    <div class="input-group">

                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon4">
                                                <span class="fa fa-lock" style="width: 20px;"></span>
                                            </span>
                                        </div>
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder=@_localizer["ConfirmPassword"] aria-label="ConfirmPassword" aria-describedby="basic-addon4"/>

                                    </div>
                                </div>

                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-success" id="divPartial">@_localizer["Register"]</button>
                                <a href='/' class="Button btn btn-outline-info waves-effect ml-auto">@_localizer["Close"]</a>
                            </div>
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
</script>
<script src="bootstrap/js/bootstrap.min.js"></script>

<script type="text/javascript">
    $(function() {
        $('#modalForm').modal('show');
    });
</script>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="~/js/revealEye.js"></script>